<div class="fields"> 
    <span class="input-form-label">Title </span><%= f.text_field :name_title, :size => 4, :class => 'input-form-input' %></span>
    <span class="input-form-label">Firstname </span> <%= f.text_field :name_first, :size => 18, :class => 'input-form-input' %></span>
    <span class="input-form-label">Middlename </span><%= f.text_field :name_middle, :size => 18, :class => 'input-form-input' %></span>
    <span class="input-form-label">Surname </span><%= f.text_field :name_last, :size => 18, :class => 'input-form-input' %></span>
    <span class="input-form-label short-select">Sex </span><%= f.select :sex, people_gender, :prompt => true, :size => 4, :class => 'input-form-input' %></span>
    <span class="input-form-label"><%= link_to_remove_fields "remove person", f %></span><br />


    <div class="span-1" style="width:10%;">    
        Add Life Event
    </div>
    
    <div class="span-1 last" style="width:88%;">    
        <% f.fields_for :person_events do |person_event_attr| %>
            <%= render :partial => "person_event_fields", :locals => {:f => person_event_attr} %>
        <% end %>
        <span class="span-3 top-25"><%= link_to_add_fields "+ add another event", f, :person_events %></span>
    </div>  

</div>

