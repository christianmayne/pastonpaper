<div class="fields">
    <span class="input-form-label">
        <%= f.collection_select :event_type_id, @event_type, :id, :name, :prompt => true %> 
    </span>
    <span class="input-form-label">Date <%= f.text_field :date_event, :size => 6, :class => 'input-form-input' %></span><span class="small">dd/mm/yyyy</span>
    <span class="input-form-label">Street 1 <%= f.text_field :street1, :size => 6, :class => 'input-form-input' %></span>
    <span class="input-form-label">Street 2 <%= f.text_field :street2, :size => 6, :class => 'input-form-input' %></span>
    <span class="input-form-label">Town <%= f.text_field :town, :size => 6, :class => 'input-form-input' %></span>
    <span class="input-form-label">County <%= f.text_field :county, :size => 6, :class => 'input-form-input' %></span>
    <span class="input-form-label">Country <%= f.text_field :country, :size => 6, :class => 'input-form-input' %></span>
    <span class="input-form-label"><%= link_to_remove_fields "remove", f %></span>
</div>


